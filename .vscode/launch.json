        "version": "0.2.0",
        "configurations": [
            {
                "name": "Flask: Debug App",
                "type": "python",
                "request": "launch",
                "module": "flask",
                "env": {
                    "FLASK_APP": "app.py", // Replace with your main Flask file if it's not app.py
                    "FLASK_ENV": "development"
                },
                "args": [
                    "run",
                    "--no-debugger",
                    "--no-reload"
                ],
                "jinja": true
            }
        ]
    }